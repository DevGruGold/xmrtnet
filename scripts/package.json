{
  "name": "xmrt-deployment-scripts",
  "version": "1.0.0",
  "description": "Deployment scripts for XMRT DAO ecosystem",
  "main": "deploy-complete-dao.js",
  "scripts": {
    "deploy": "hardhat run deploy-complete-dao.js",
    "upgrade": "hardhat run upgrade.js",
