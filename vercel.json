{
  "version": 2,
  "buildCommand": "cd frontend/xmrt-dao-frontend && pnpm install && pnpm run build",
  "outputDirectory": "frontend/xmrt-dao-frontend/dist",
  "installCommand": "pnpm install --store=node_modules/.pnpm-store",
  "framework": null,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "build": {
    "env": {
      "PNPM_VERSION": "10.4.1",
      "NODE_VERSION": "18"
    }
  },
  "functions": {
    "frontend/xmrt-dao-frontend/dist/**": {
      "maxDuration": 10
    }
  }
}

