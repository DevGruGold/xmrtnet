# XMRTNET Environment Variables
# Copy this file to .env.local and fill in your actual values

# Blockchain Configuration
VITE_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
VITE_POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
VITE_BSC_RPC_URL=https://bsc-dataseed.binance.org/
VITE_AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Wallet Integration
VITE_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id
VITE_METAMASK_ENABLED=true
VITE_COINBASE_WALLET_ENABLED=true

# API Keys
VITE_MORALIS_API_KEY=your_moralis_api_key
VITE_ALCHEMY_API_KEY=your_alchemy_api_key
VITE_COINGECKO_API_KEY=your_coingecko_api_key

# Payment Processing
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Backend Services
VITE_API_BASE_URL=https://api.xmrtnet.com
VITE_WEBSOCKET_URL=wss://ws.xmrtnet.com

# Feature Flags
VITE_ENABLE_CRYPTO_TRADING=true
VITE_ENABLE_NFT_MARKETPLACE=true
VITE_ENABLE_STAKING=true
VITE_ENABLE_LENDING=true

# Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Security
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
VITE_ENCRYPTION_KEY=your_encryption_key

# Social Login
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_TWITTER_API_KEY=your_twitter_api_key

# IPFS
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/
VITE_PINATA_API_KEY=your_pinata_api_key

# Notifications
VITE_FIREBASE_CONFIG={"apiKey":"your_firebase_config"}
VITE_PUSH_NOTIFICATION_VAPID_KEY=your_vapid_key

# Development
VITE_DEBUG_MODE=false
VITE_MOCK_API=true

